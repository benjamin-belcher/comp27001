<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Separator?>
<?import com.example.workernodes.NumberField?>
<?import javafx.scene.layout.AnchorPane?>

<GridPane
        fx:controller="com.example.workernodes.NodesController"
        fx:id="myAnchorPane"
        xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

    <Label
            text="Welcome to your worker nodes!"
            GridPane.columnIndex="0"
            GridPane.rowIndex="0"/>

    <Separator
            GridPane.rowIndex="1"
            GridPane.columnSpan="2" />

    <Label
            fx:id="loadBalancerConnectionText"
            text=""
            GridPane.columnIndex="0"
            GridPane.rowIndex="2"/>

    <Button
            text="Connect to load balancer"
            fx:id="loadBalancerConnectionBtn"
            onAction="#connectToLoadBalancer"
            GridPane.columnIndex="0"
            GridPane.rowIndex="3"
            GridPane.columnSpan="2"/>

    <Label
            text="Node weight"
            GridPane.rowIndex="4"/>


    <NumberField
            fx:id="nodeWeight"
            text=""
            promptText="3"
            GridPane.rowIndex="5"/>

    <Button
            text="Create node"
            onAction="#onStartNodesClicked"
            GridPane.columnIndex="0"
            GridPane.rowIndex="6"
            GridPane.columnSpan="2"/>

    <Separator
        GridPane.rowIndex="7"
        GridPane.columnSpan="2" />

    <Button
            text="Start Load Balancer"
            onAction="#onStartLoadBalancer"
            GridPane.columnIndex="0"
            GridPane.rowIndex="8"
            GridPane.columnSpan="2"/>
</GridPane>
